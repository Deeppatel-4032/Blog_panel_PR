<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Panel Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <div class="sidebar bg-dark text-white p-3">
          <h2 class="text-light text-center fw-bold fs-1 pt-4">DP</h2>
          <ul class="nav flex-column ps-4">
            <li class="nav-item mb-4"><a href="/">Dashboard</a></li>
            <li class="nav-item mb-4"><a href="#" data-bs-toggle="modal" data-bs-target="#addBlogModal">Add Blog</a></li>
            <li class="nav-item mb-4"><a href="/blog_view">Blog View</a></li>
            <li class="nav-item mb-4"><a href="/myBlog">My Blog</a></li>
            <li class="nav-item mb-4"><a href="/userProfile">Personal Information</a></li>
            <li class="nav-item mb-4"><a href="/changePassForm">Change Password</a></li> 
            <li class="nav-item mb-4"><a href="/logOut">Logout</a></li>
          </ul>
        </div>
      
        <!-- Main Content -->
        <div class="main-content p-4">
          <!-- Top Navbar with Profile Info -->
          <nav class="navbar navbar-expand-lg navbar-light bg-dark">
            <div class="container">
              <a class="navbar-brand" href="#" style="color: white;">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
                  <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5"/>
                </svg>
              </a>
              <div class="collapse navbar-collapse d-flex justify-content-center" style="margin-left: 750px;" id="navbarNav">
                <ul class="navbar-nav">
                  <!-- Profile Dropdown with Image and Username -->
                  <li class="nav-item dropdown " style="width: 60px; height: 60px;">
                    <a class="nav-link dropdown-toggle text-light" href="#" id="navbarProfileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      <img src="<%= userPath %>" alt="<%=userName%>" class="rounded-circle img-fluid" width="500px" height="500px">
                      <span style="color: white;"><%= userName %></span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end"  style="right: 0;">
                      <li><a class="dropdown-item" href="/userProfile">View Profile</a></li>
                      <li><a class="dropdown-item" href="#">Settings</a></li>
                      <li><hr class="dropdown-divider"></li>
                      <li><a class="dropdown-item" href="/logOut">Logout</a></li>
                    </ul>
                  </li>
                </ul>
              </div>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
            </div>
          </nav>

          <!-- Welcome message -->
          <div class="top-nav">
            <h1>Welcome Back, <%= userName %>...ðŸŽ‰</h1>
          </div>
      
          <!-- Statistics Cards -->
          <div class="stats-cards d-flex justify-content-between mb-4">
            <div class="card p-3 text-center" style="width: 18rem;">
              <h4>Total Users</h4>
              <p>1,024</p>
            </div>
            <div class="card p-3 text-center" style="width: 18rem;">
              <h4>Active Users</h4>
              <p>768</p>
            </div>
            <div class="card p-3 text-center" style="width: 18rem;">
              <h4>New Registrations</h4>
              <p>45</p>
            </div>
            <div class="card p-3 text-center" style="width: 18rem;">
              <h4>Pending Tasks</h4>
              <p>12</p>
            </div>
          </div>
      
          <!-- Recent Activity Table -->
          <div class="recent-activity mb-5">
            <h4>Recent User Activity</h4>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>User</th>
                  <th>Action</th>
                  <th>Date</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>John Doe</td>
                  <td>Logged in</td>
                  <td>2024-09-20</td>
                </tr>
                <tr>
                  <td>Jane Smith</td>
                  <td>Updated Profile</td>
                  <td>2024-09-21</td>
                </tr>
                <tr>
                  <td>Michael Lee</td>
                  <td>Registered</td>
                  <td>2024-09-21</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Add Blog Modal -->
      <div class="modal fade" id="addBlogModal" tabindex="-1" aria-labelledby="addBlogModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="addBlogModalLabel">Add New Blog</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="/blogShow" method="post" class="mb-5" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="imgPath" class="form-label">Image URL :</label>
                    <input type="file" class="form-control" id="imgPath" name="imgPath" placeholder="Enter image URL" required>
                </div>
                <div class="mb-3">
                    <label for="username" class="form-label">Username :</label>
                    <input type="text" class="form-control" id="username" name="userName" placeholder="Enter your username" required>
                </div>

                <div class="mb-3">
                    <label for="date" class="form-label">Date :</label>
                    <input type="date" class="form-control" id="date" name="date" required>
                </div>

                <div class="mb-3">
                    <label for="title" class="form-label">Title :</label>
                    <input type="text" class="form-control" id="title" name="title" placeholder="Enter blog title" required>
                </div>
               
                <div class="mb-3">
                    <label for="description" class="form-label">Description :</label>
                    <textarea class="form-control" id="description" name="description" rows="4" placeholder="Enter blog description" required></textarea>
                </div>
                <div class="d-flex justify-content-center">
                  <button type="submit" class="btn btn-primary mx-2">Submit</button>
                  <button type="button" class="btn btn-danger mx-2" data-bs-dismiss="modal">Close</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
