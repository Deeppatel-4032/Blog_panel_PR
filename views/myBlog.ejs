<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>My Blog Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .blog-post {
            border: 1px solid #e3e3e3;
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.2s ease-in-out;
        }

        .blog-post:hover {
            transform: translateY(-5px);
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        }

        .blog-img {
            width: 100%;
            height: 300px;
            object-fit: cover;
        }

        .blog-content {
            padding: 15px;
        }

        .blog-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .blog-date {
            font-size: 0.9rem;
            color: #888;
            margin-bottom: 10px;
        }

        .blog-description {
            font-size: 1rem;
            margin-bottom: 15px;
        }

        .btn-group {
            display: flex;
            justify-content: space-between;
        }

        .btn-group a {
            color: white;
            text-decoration: none;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">My Blog Page</h1>

        <!-- Display Blog Posts -->
        <div class="row g-4">
            <% if (myBlogData.length > 0) { %>
                <% myBlogData.forEach((blogs) => { %>
                    <div class="col-md-6">
                        <div class="blog-post">
                            <!-- Blog Image -->
                            <img src="<%= blogs.imgPath %>" alt="Blog Image" class="blog-img">

                            <!-- Blog Content -->
                            <div class="blog-content">
                                <h4 class="blog-title"><%= blogs.title %></h4>
                                <span class="blog-date"><%= new Date(blogs.date).toLocaleDateString('en-GB') %></span>
                                <p class="blog-description"><%= blogs.description %></p>

                                <!-- Action Buttons (Edit/Delete) -->
                                <div class="btn-group">
                                    <button class="btn btn-primary mx-2">
                                        <a href="/my_blogEdit/<%= blogs._id %>">Edit</a>
                                    </button>
                                    <button class="btn btn-danger mx-2">
                                        <a href="/my_BlogDelete/<%= blogs._id %>">Delete</a>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-center">No blog posts available. Start by adding one!</p>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>
